<% layout('layouts/boilerplate') -%>
<h1>Post index page !</h1>

<div class="container-fluid">
    <div class="row">
        <div class="col-4">
            <% include ../partials/searchFilter %>
        </div>
        <div class="col-8">
            <div id="map"></div>
        </div>
    </div>
</div>
<% include ../partials/paginatePost %>
<% posts.docs.forEach(function(post){ %>
<div>
    <h2><%= post.title %></h2>
    <div>Price: <%= post.price %></div>
    <div>Description: <%= post.description %></div>
    <div>Location: <%= post.location %></div>
    <div><a href='/posts/<%=post.id %>'>View More</a></div>
</div>
<% }); %>
<% include ../partials/paginatePost %>

<script>
    mapboxgl.accessToken = "<%= mapBoxToken %>";
    const posts = { features: <%- JSON.stringify(posts.docs) %>};
</script>
      <script src="/javascripts/allPostsClusterMap.js"></script>