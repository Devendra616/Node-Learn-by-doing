<div style="margin: 20px 0;">
    <% if(posts.page -1){ %> <!-- if page has one more page before it -->
        <a href="<%= paginateUrl %><%= posts.page - 1 %>">Prev</a>
   <% } %>
   <!-- if post count is more than 1 and any document exist, then show pagenumbers -->
   <% if(posts.pages > 1 && posts.docs.length) { %>
        <% for(let i=1; i<= posts.pages;i++){ %>
            <a href='<%= paginateUrl %><%= i %>' 
                <%= i === posts.page ? "style=color:#000;":"" %>> <%= i %></a> 
        <% } %>
    <% } %>    
   <% if(posts.page + 1 <= posts.pages){ %> <!-- if page has one more page after it -->
    <a href="<%= paginateUrl %><%= posts.page + 1 %>>">Next</a>
<% } %>
</div>